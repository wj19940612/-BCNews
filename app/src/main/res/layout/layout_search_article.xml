<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:scrollbars="none">

    <View
        android:id="@+id/articleSplit"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/bg_F5F5"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="@dimen/common_padding"
        android:layout_marginTop="20dp"
        android:text="@string/article"
        android:textColor="@color/text_4a"
        android:textSize="16sp"/>

    <com.sbai.bcnews.view.search.SearchArticleContent
        android:id="@+id/firstArticle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/firstSplit"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="20dp"
        android:background="@color/bg_F5F5"
        android:visibility="gone"/>

    <com.sbai.bcnews.view.search.SearchArticleContent
        android:id="@+id/secondArticle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/secondSplit"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="20dp"
        android:background="@color/bg_F5F5"
        android:visibility="gone"/>

    <com.sbai.bcnews.view.search.SearchArticleContent
        android:id="@+id/thirdArticle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/lookAllArticle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_white"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:text="@string/look_all_article"
        android:textColor="@color/text_9B9B"
        android:textSize="12sp"/>

</LinearLayout>