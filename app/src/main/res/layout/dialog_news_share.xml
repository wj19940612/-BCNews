<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:maxHeight="326dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="29dp"
        android:textColor="@color/text_222"
        android:textSize="11sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/split"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:minHeight="122dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/weChatFriend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_white_small_round"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/ic_share_wechat"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:text="@string/wechat_friend"
                android:textColor="@color/text_222"
                android:textSize="12sp"/>


            <TextView
                android:id="@+id/weChatFriendCircle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_white_small_round"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/ic_share_wechat_circle"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:text="@string/wechat_circle"
                android:textColor="@color/text_222"
                android:textSize="12sp"/>


            <TextView
                android:id="@+id/qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_white_small_round"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/ic_share_qq"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:text="QQ"
                android:textColor="@color/text_222"
                android:textSize="12sp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/sinaWeibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_white_small_round"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/ic_share_weibo"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:text="@string/sina_weibo"
                android:textColor="@color/text_222"
                android:textSize="12sp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/copyLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_white"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/ic_share_copy_link"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/copy_link"
                android:textColor="@color/text_222"
                android:textSize="12sp"
                android:visibility="visible"/>
        </LinearLayout>

    </HorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/common_padding"
        android:background="@color/bg_F5F5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nightModelSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bg_white_small_round"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/bg_night_mode"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:text="@string/night_mode"
            android:textColor="@color/text_222"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/whistleBlowing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bg_white_small_round"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/ic_whistle_blowing"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:text="@string/whistle_blowing"
            android:textColor="@color/text_222"
            android:textSize="12sp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:minHeight="80dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/subTextSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_sub_text_size"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/text_8F8E"
                android:textSize="12sp"
                tools:text="字体大小(中)"/>

        </LinearLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_marginTop="34dp"
        android:background="@drawable/bg_white_round"
        android:gravity="center"
        android:minHeight="50dp"
        android:text="@string/cancel"
        android:textColor="@color/text_222"
        android:textSize="15sp"/>
</LinearLayout>