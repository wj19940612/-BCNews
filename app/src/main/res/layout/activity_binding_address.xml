<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <com.sbai.bcnews.view.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:maxLines="1"
        app:backFeature="true"
        app:backIcon="@drawable/ic_tb_back_black"
        app:leftViewLeftPadding="14dp"
        app:titleText="@string/binding_currency_address"
        app:titleTextColor="@color/text_222"
        app:titleTextSize="17sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:minHeight="44dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bindingName"
                android:layout_width="81dp"
                android:layout_height="44dp"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:text="@string/currency_address"
                android:textColor="@color/text_222"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/bindingAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="44dp"
                android:layout_weight="1"
                android:background="@null"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:hint="@string/please_input_coin_address"
                android:textColorHint="@color/text_999"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:id="@+id/addressLine"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/background"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/userLayout"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/userName"
                android:layout_width="81dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:text="@string/currency_address"
                android:textColor="@color/text_222"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/userNameInput"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="18867102890"
                android:textColorHint="@color/text_999"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:id="@+id/nameLine"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/background"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/authCodeLayout"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/authCode"
                android:layout_width="81dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:text="@string/conversion_detail"
                android:textColor="@color/text_222"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/authCodeInput"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="18867102890"
                android:textColorHint="@color/text_999"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:inputType="number"
                android:maxLength="10"/>

            <TextView
                android:id="@+id/getAuthCode"
                android:layout_width="90dp"
                android:layout_height="28dp"
                android:layout_marginRight="14dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/btn_white_one_hundred_rounded"
                android:enabled="false"
                android:gravity="center"
                android:text="@string/get_auth_code"
                android:textColor="@color/primary_or_unlucky_text_color"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/bindingBtn"
        android:layout_width="275dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_common_round"
        android:gravity="center"
        android:text="@string/immediately_binding"
        android:textColor="@color/white"
        android:textSize="15sp" />

</LinearLayout>