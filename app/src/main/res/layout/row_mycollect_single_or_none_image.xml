<?xml version="1.0" encoding="utf-8"?>
<com.sbai.bcnews.view.move.SwipeItemLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0.5dp"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Space
            android:id="@+id/split"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white"
            android:paddingBottom="18dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/newsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="22dp"
                android:layout_toLeftOf="@+id/cover"
                android:ellipsize="end"
                android:lineSpacingExtra="3dp"
                android:maxLines="3"
                android:textColor="@color/text"
                android:textSize="16sp"
                tools:text="空间大姐夫开大会萨科技当升科技凤凰健康的散户山东矿机防护等级考试"/>

            <ImageView
                android:id="@+id/cover"
                android:layout_width="114dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="12dp"
                tools:background="@color/colorPrimary"/>

            <TextView
                android:id="@+id/original"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/newsTitle"
                android:layout_marginRight="18dp"
                android:background="@drawable/bg_original"
                android:minWidth="24dp"
                android:text="@string/original"
                android:textColor="@color/textColorPrimary"/>

            <TextView
                android:id="@+id/source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/newsTitle"
                android:layout_toRightOf="@+id/original"
                android:textColor="@color/unluckyText"
                android:textSize="12sp"
                tools:text="溺水的鱼"/>
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:gravity="center">

        <TextView
            android:id="@+id/deleteCollect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/cancel_collect"
            android:textSize="17sp"/>
    </LinearLayout>


</com.sbai.bcnews.view.move.SwipeItemLayout>