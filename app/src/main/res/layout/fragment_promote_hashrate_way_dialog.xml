<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragment.dialog.PromoteHashRateWayDialogFragment">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/dialogDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/ic_popup_delete"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialogDelete"
        android:background="@drawable/bg_white_small_round"
        android:gravity="center_horizontal"
        android:minHeight="50dp"
        android:orientation="vertical"
        android:paddingBottom="29dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="29dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_how_promote_hash_rate_right"
            android:drawablePadding="3dp"
            android:drawableRight="@drawable/ic_how_promote_hash_rate_left"
            android:gravity="center"
            android:text="@string/how_promote_hash_rate"
            android:textColor="@color/text_7E89"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/content"
            android:textColor="@color/text97"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:lineSpacingExtra="11dp"
            android:text="@string/promote_hash_rate_way"/>
    </LinearLayout>

</RelativeLayout>