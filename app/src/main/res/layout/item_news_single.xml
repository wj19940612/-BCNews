<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/rootView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_news_item"
    android:orientation="vertical">

    <View
        android:id="@+id/splitView"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/bg_F5F5"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/contentRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:paddingBottom="16dp"
        android:paddingTop="16dp">

        <ImageView
            android:id="@+id/img"
            android:layout_width="114dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="12dp"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/img"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/text_222"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="这么自信打个包"/>

        <ImageView
            android:id="@+id/original"
            android:layout_width="24dp"
            android:layout_height="13dp"
            android:layout_below="@+id/title"
            android:layout_marginRight="10dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/bg_original"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginTop="22dp"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@+id/original"
            android:gravity="center"
            android:text="@string/original"
            android:textColor="@color/text_999"
            android:textSize="11sp"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginTop="22dp"
            android:layout_toRightOf="@+id/source"
            android:gravity="center"
            android:text="@string/original"
            android:textColor="@color/text_999"
            android:textSize="11sp"/>

        <TextView
            android:id="@+id/readCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginTop="22dp"
            android:layout_toLeftOf="@+id/img"
            android:layout_marginRight="12dp"
            android:textSize="11sp"
            android:textColor="@color/text_999"
            android:text="2000人阅读" />
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_F5F5"/>

    <TextView
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/bg_F5F5"
        android:gravity="center"
        android:text="@string/no_more_article"
        android:textColor="@color/text_999"
        android:textSize="10sp"
        android:visibility="gone"/>
</LinearLayout>