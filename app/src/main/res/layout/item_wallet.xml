<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/rootView">

    <TextView
        android:id="@+id/bitType"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginLeft="14dp"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="@color/text_222"
        android:text="BTC"/>

    <TextView
        android:id="@+id/bitCount"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:drawableRight="@drawable/ic_common_right_arrow"
        android:drawablePadding="11dp"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="@color/text_999"
        android:text="1.70215214"/>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/background"
        android:layout_below="@+id/bitType"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"/>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:layout_below="@+id/line"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="37dp"
            android:text="@string/all_load_finish"
            android:textColor="@color/text_AAA9A6"
            android:textSize="13sp" />
    </LinearLayout>

</RelativeLayout>