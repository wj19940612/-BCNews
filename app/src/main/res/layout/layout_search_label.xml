<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">


    <TextView
        android:id="@+id/emptyView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="@string/search_for_everything_you_want_to_see"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/hotSearchLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="23dp"
        android:text="@string/hot_search"
        android:textColor="@color/text_AAA9A6"
        android:textSize="12sp"/>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/hotFlexboxLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        app:alignItems="flex_start"
        app:flexWrap="wrap">

        <TextView
            android:id="@+id/firstHotSearch"
            style="@style/SearchText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/secondHotSearch"
            style="@style/SearchText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/ThirdHotSearch"
            style="@style/SearchText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/ForthHotSearch"
            style="@style/SearchText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/FifthHotSearch"
            style="@style/SearchText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/sixthHotSearch"
            style="@style/SearchText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </com.google.android.flexbox.FlexboxLayout>

    <View
        android:id="@+id/split"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="24dp"
        android:background="@color/bg_F5F5"/>

    <TextView
        android:id="@+id/historySearchLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="12dp"
        android:text="@string/history_search"
        android:textColor="@color/text_AAA9A6"
        android:textSize="12sp"/>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/historyFlexboxLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        app:alignItems="flex_start"
        app:flexWrap="wrap">

        <TextView
            android:id="@+id/firstHistorySearch"
            style="@style/SearchText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/secondHistorySearch"
            style="@style/SearchText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/ThirdHistorySearch"
            style="@style/SearchText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/ForthHistorySearch"
            style="@style/SearchText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/FifthHistorySearch"
            style="@style/SearchText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/sixthHistorySearch"
            style="@style/SearchText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/seventhHistorySearch"
            style="@style/SearchText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/eighthHistorySearch"
            style="@style/SearchText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/ninthHistorySearch"
            style="@style/SearchText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </com.google.android.flexbox.FlexboxLayout>

    <TextView
        android:id="@+id/clearHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:text="@string/clear_history"
        android:textColor="@color/text_7099D4"
        android:textSize="12sp"/>
</LinearLayout>