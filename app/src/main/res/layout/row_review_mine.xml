<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:background="@drawable/bg_white"
    android:id="@+id/rootView"
    app:cardCornerRadius="4dp"
    android:layout_marginRight="@dimen/common_padding"
    android:layout_marginLeft="@dimen/common_padding"
    app:cardMaxElevation="0dp"
    app:contentPadding="20dp">

    <RelativeLayout
        android:id="@+id/writeRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/portrait"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            tools:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/portrait"
            android:textColor="@color/text_222"
            tools:text="111111111"/>

        <TextView
            android:id="@+id/praiseCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_white"
            android:drawablePadding="5dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="12dp"
            android:paddingTop="10dp"
            android:textColor="@color/text_praise"
            android:textSize="12sp"
            tools:drawableRight="@drawable/ic_common_praise_normal"
            tools:text="5454454545"/>

        <TextView
            android:id="@+id/pointContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/portrait"
            android:layout_marginRight="12dp"
            android:layout_marginTop="9dp"
            android:lineSpacingExtra="3dp"
            android:textColor="@color/text_4949"
            android:textSize="16sp"
            android:layout_marginBottom="13dp"
            tools:text="付款了电视剧爱发科来的级都是第三方快乐健康是登录时刻龙卷风抗裂砂浆放大看鹿鼎记"/>

        <TextView
            android:id="@+id/timeLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pointContent"
            android:textColor="@color/text_999"
            android:textSize="12sp"
            tools:text="12:30"/>

        <TextView
            android:id="@+id/review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pointContent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/timeLine"
            android:background="@drawable/btn_999_loop"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:text="@string/review_TA"
            android:textColor="@color/text_999"
            android:textSize="12sp"/>

        <RelativeLayout
            android:id="@+id/reviewRL"
            android:layout_below="@+id/timeLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:background="@drawable/bg_f5_round"
            android:padding="10dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_4949"
                tools:text="回复 用户2700:很多人注意到多出一个字接口很多接口返回看得开飞机"/>

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/newsImage"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_below="@+id/title"
                android:layout_marginTop="11dp"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/newsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@+id/newsImage"
                android:textColor="@color/text_4949"
                tools:text="看吉林省会计法律快捷登录"/>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>