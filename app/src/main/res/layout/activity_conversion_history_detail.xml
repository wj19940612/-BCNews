<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background">

    <com.sbai.bcnews.view.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:maxLines="1"
        app:backFeature="true"
        app:backIcon="@drawable/ic_tb_back_black"
        app:leftViewLeftPadding="14dp"
        app:titleText="@string/conversion_detail_information"
        app:titleTextColor="@color/text_222"
        app:titleTextSize="17sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/conversionTime"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:paddingLeft="12dp"
            android:gravity="center_vertical"
            android:textColor="@color/text_222"
            android:textSize="15sp"
            android:background="@color/white"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/background" />

        <TextView
            android:id="@+id/conversionType"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:paddingLeft="12dp"
            android:gravity="center_vertical"
            android:textColor="@color/text_222"
            android:textSize="15sp"
            android:background="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/conversionCount"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:paddingLeft="12dp"
            android:gravity="center_vertical"
            android:textColor="@color/text_222"
            android:textSize="15sp"
            android:background="@color/white"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/background" />

        <TextView
            android:id="@+id/payCount"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:paddingLeft="12dp"
            android:gravity="center_vertical"
            android:textColor="@color/text_222"
            android:textSize="15sp"
            android:background="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/acceptAddress"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:paddingLeft="12dp"
            android:gravity="center_vertical"
            android:textColor="@color/text_222"
            android:textSize="15sp"
            android:background="@color/white"/>

        <View
            android:id="@+id/acceptAddressLine"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/background" />

        <TextView
            android:id="@+id/acceptUserName"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:paddingLeft="12dp"
            android:gravity="center_vertical"
            android:textColor="@color/text_222"
            android:textSize="15sp"
            android:background="@color/white"/>

    </LinearLayout>

    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="12dp"
        android:gravity="center_vertical"
        android:textColor="@color/text_222"
        android:textSize="15sp"
        android:background="@color/white"/>

    <TextView
        android:id="@+id/tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:paddingLeft="12dp"
        android:gravity="center_vertical"
        android:textColor="@color/text97"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/statement"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20dp"
        android:gravity="bottom|center_horizontal"
        android:textSize="12sp"/>

</LinearLayout>